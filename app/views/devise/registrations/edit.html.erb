<h2>Редактировать профиль</h2>
<h3>Заполните все поля, чтобы записаться на мероприятия.</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :Email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :Имя %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :Фамилия %><br />
    <%= f.text_field :surname, autofocus: true, autocomplete: "family-name" %>
  </div>

  <div class="field">
    <%= f.label :Возраст %><br />
    <%= f.number_field :age, autofocus: true, autocomplete: "bday" %>
  </div>

  <div class="field">
    <%= f.label :Пол %><br />
    <%= f.select :gender, options_for_select([['Мужской', 'мужской'], ['Женский', 'женский']]), autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :Номер_телефона %><br />
    <%= f.phone_field :phone, autofocus: true, autocomplete: "tel" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "Текущий пароль (для подтверждения изменений)" %><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="field">
    <%= f.label :password, "Новый пароль" %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Подтвердите новый пароль" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Обновить" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>



<br>
<div>Огорчились? <%= button_to "Удалить аккаунт", registration_path(resource_name), data: { confirm: "Вы уверены?", turbo_confirm: "Вы уверены?" }, method: :delete %></div>

<%= link_to "Назад", :back %>
