<h2 class="mb-4">Редактировать профиль</h2>
<h3 class="mb-4">Заполните все поля, чтобы записаться на мероприятия.</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'needs-validation' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-2">
    <%= f.label :email, "Email", class: 'form-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-sm' %>
  </div>

  <div class="mb-2">
    <%= f.label :name, "Имя", class: 'form-label' %>
    <%= f.text_field :name, autocomplete: "name", class: 'form-control form-control-sm' %>
  </div>

  <div class="mb-2">
    <%= f.label :surname, "Фамилия", class: 'form-label' %>
    <%= f.text_field :surname, autocomplete: "family-name", class: 'form-control form-control-sm' %>
  </div>

  <div class="mb-2">
    <%= f.label :age, "Возраст", class: 'form-label' %>
    <%= f.number_field :age, autocomplete: "bday", class: 'form-control form-control-sm' %>
  </div>

  <div class="mb-2">
    <%= f.label :gender, "Пол", class: 'form-label' %>
    <%= f.select :gender, options_for_select([['Мужской', 'мужской'], ['Женский', 'женский']]), class: 'form-select form-select-sm' %>
  </div>

  <div class="mb-2">
    <%= f.label :phone, "Номер телефона", class: 'form-label' %>
    <%= f.phone_field :phone, autocomplete: "tel", class: 'form-control form-control-sm' %>
  </div>

  <div class="mb-2">
    <%= f.label :current_password, "Текущий пароль (для подтверждения изменений)", class: 'form-label' %>
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control form-control-sm' %>
  </div>

  <div class="mb-2">
    <%= f.label :password, "Новый пароль", class: 'form-label' %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control form-control-sm' %>
  </div>

  <div class="mb-2">
    <%= f.label :password_confirmation, "Подтвердите новый пароль", class: 'form-label' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-sm' %>
  </div>

  <div class="mb-4">
    <%= f.submit "Обновить", class: 'btn btn-primary btn-sm' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<div class="mb-4">
  <p>Огорчились? <%= button_to "Удалить аккаунт", registration_path(resource_name), data: { confirm: "Вы уверены?" }, method: :delete, class: 'btn btn-danger btn-sm' %></p>
</div>

<%= link_to "Назад", :back, class: 'btn btn-secondary btn-sm' %>
