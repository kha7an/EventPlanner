<%= stylesheet_link_tag 'devise_forms', media: 'all' %>

<div class="devise-form-container">
  <h2>Редактировать профиль</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <% if resource.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(resource.errors.count, "ошибка") %>:</h2>
        <ul>
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :name, 'Имя' %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :surname, 'Фамилия' %>
      <%= f.text_field :surname %>
    </div>

    <div>
      <%= f.label :age, 'Возраст' %>
      <%= f.number_field :age %>
    </div>

    <div>
      <%= f.label :phone, 'Телефон' %>
      <%= f.text_field :phone %>
    </div>

    <div>
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div>
      <%= f.label :password %> <i>(оставьте пустым, если не хотите менять)</i>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div>
      <%= f.label :current_password %> <i>(обязательно для подтверждения изменений)</i>
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

    <div>
      <%= f.submit "Обновить" %>
    </div>
  <% end %>

  <div class="links">
    <h3>Дополнительно</h3>
    <%= link_to 'Удалить аккаунт', registration_path(resource_name), data: { confirm: 'Вы уверены?' }, method: :delete %><br>
    <%= link_to 'Назад', root_path %>
  </div>
</div>

