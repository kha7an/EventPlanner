<%= stylesheet_link_tag 'devise_forms', media: 'all' %>

<div class="devise-form-container">
  <h2>Вход</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <% if resource.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(resource.errors.count, "ошибка") %>:</h2>
        <ul>
          <% resource.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="remember-me-wrapper">
        <%= f.label :remember_me %>
        <div class="check_boxcss">
        <%= f.check_box :remember_me %>
        </div>
      </div>
    <% end %>



    <div>
      <%= f.submit "Войти" %>
    </div>
  <% end %>

  <div class="links">
    <%= link_to "Забыли пароль?", new_password_path(resource_name) %><br>
    <%= link_to "Регистрация", new_registration_path(resource_name) %>
  </div>
</div>

