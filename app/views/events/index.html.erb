<div class="max-w-7xl mx-auto py-12">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">Мероприятия</h1>
  <%= link_to 'Создать', new_event_path, class: 'btn btn-secondary me-2' %>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @events.each do |event| %>
      <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-2"><%= event.title %></h2>
        <p class="text-gray-700 mb-4"><%= event.description %></p>
        <%= link_to 'Подробнее', event_path(event), class: 'inline-block bg-blue-500 text-white px-4 py-2 rounded' %>
      </div>
    <% end %>
  </div>
</div>
