<div class="container mx-auto p-6 max-w-4xl">
  <div class="bg-white shadow-md rounded-lg p-6">
    <h1 class="text-4xl font-bold text-gray-900 mb-2"><%= @event.title %></h1>
    <p class="text-lg text-gray-700 mb-4"><%= @event.description %></p>

    <div class="mb-4">
      <h3 class="text-2xl font-semibold text-gray-800">Дата и время:</h3>
      <p class="text-xl text-gray-600"><%= I18n.l(@event.date, format: :verbose) %></p>
    </div>

    <div class="mb-4">
      <h3 class="text-2xl font-semibold text-gray-800">Стоимость:</h3>
      <p class="text-xl text-green-600 font-bold"><%= number_to_currency(@event.price, unit: "₽", format: "%n %u") %></p>
    </div>

    <% if user_signed_in? %>
      <% if current_user == @event.organizer %>
        <div class="flex space-x-4">
          <%= link_to 'Редактировать', edit_event_path(@event), class: "inline-flex items-center px-4 py-2 border border-blue-500 text-blue-500 font-semibold rounded hover:bg-blue-50" %>
          <%= button_to 'Удалить', @event, method: :delete, data: { confirm: 'Вы уверены?' }, class: "inline-flex items-center px-4 py-2 border border-red-500 text-red-500 font-semibold rounded hover:bg-red-50", form_class: "inline-block" %>
        </div>
      <% end %>
    <% end %>

    <div class="mt-8">
      <h3 class="text-2xl font-semibold text-gray-800">Организатор:</h3>
      <p class="text-lg text-gray-700"><%= @event.organizer.name %></p>
    </div>
  </div>

  <div class="bg-white shadow-md rounded-lg p-6 mt-8">
    <h3 class="text-2xl font-semibold text-gray-800 mb-4">Зарегистрированные пользователи:</h3>
    <% if @event.users.any? %>
      <ul>
        <% @event.users.each do |user| %>
          <li class="text-lg text-gray-700 mb-1"><%= user.name %></li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-600">На это мероприятие пока никто не зарегистрировался.</p>
    <% end %>
  </div>

  <div class="text-center mt-8">
    <%= link_to 'Вернуться назад', events_path, class: "text-blue-500 hover:underline" %>
  </div>
</div>
