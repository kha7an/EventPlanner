<%= stylesheet_link_tag 'events_new', media: 'all' %>

<div class="event-form-container">
  <h1 class="add-event">Создание мероприятия</h1>

  <%= form_with(model: @event, local: true, html: { class: 'needs-validation', novalidate: true }) do |form| %>
    <% if @event.errors.any? %>
      <div class="alert alert-danger">
        <h4 class="alert-heading">Возникли ошибки при сохранении:</h4>
        <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :title, 'Название' %>
      <%= form.text_field :title, required: true, class: 'form-control' %>
      <div class="invalid-feedback">
        Пожалуйста, введите название мероприятия.
      </div>
    </div>

    <div class="form-group">
      <%= form.label :description, 'Описание' %>
      <%= form.text_area :description, rows: 5, required: true, class: 'form-control' %>
      <div class="invalid-feedback">
        Пожалуйста, введите описание мероприятия.
      </div>
    </div>

    <div class="form-group">
      <%= form.label :location, 'Место' %>
      <%= form.text_field :location, required: true, class: 'form-control' %>
      <div class="invalid-feedback">
        Пожалуйста, укажите место проведения.
      </div>
    </div>

    <div class="form-group">
      <%= form.label :date, 'Дата и время' %>
      <%= form.datetime_field :date, required: true, class: 'form-control' %>
      <div class="invalid-feedback">
        Пожалуйста, выберите дату и время.
      </div>
    </div>

    <div class="form-group">
      <%= form.label :price, 'Цена' %>
      <%= form.number_field :price, step: 0.01, required: true, class: 'form-control' %>
      <div class="invalid-feedback">
        Пожалуйста, укажите цену.
      </div>
    </div>

<!--    <div class="form-group">-->
      <%#= form.label :image, 'Изображение' %>
      <%#= form.file_field :image, class: 'form-control' %>
<!--    </div>-->

    <div class="form-group">
      <%= form.submit 'Создать мероприятие', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to 'Назад к списку', events_path, class: 'btn-link' %>
</div>
